pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Test') {
            steps {
                // Install dependencies and run npm install (ensure npm is in the PATH)
                bat 'npm install'
            }
        }
        stage('Build') {
            steps {
                // Build the project using npm
                bat 'npm test'
            }
        }
    }
}
